<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="22dp"
    tools:context=".BaseActivity">


    <TextView
        android:id="@+id/textView_tres_perguntas_basicas"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Três perguntas Básicas:"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/pergunta1_sono"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Dormiu bem esta noite?"
        app:layout_constraintTop_toBottomOf="@+id/textView_tres_perguntas_basicas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    

    <EditText
        android:id="@+id/editText_expectativa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="Responda:"
        app:layout_constraintTop_toBottomOf="@+id/pergunta1_sono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/pergunta1_alimentacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Jantou na Noite passada?"
        app:layout_constraintTop_toBottomOf="@+id/editText_expectativa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/editText_alimentacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="Responda:"
        app:layout_constraintTop_toBottomOf="@+id/pergunta1_alimentacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/pergunta1_atividade_fisica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Fez alguma atividade física hoje pela manha?"
        app:layout_constraintTop_toBottomOf="@+id/editText_alimentacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/editText_atividade_fisica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="Responda:"
        app:layout_constraintTop_toBottomOf="@+id/pergunta1_atividade_fisica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/button_avancar_para_nivel_inconsciencia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Avançar"
        android:layout_gravity="start"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="64dp"

        app:layout_constraintTop_toBottomOf="@+id/editText_atividade_fisica"
        app:layout_constraintEnd_toEndOf="@+id/editText_atividade_fisica"
        app:layout_constraintStart_toStartOf="@+id/editText_atividade_fisica"

        />


</androidx.constraintlayout.widget.ConstraintLayout>